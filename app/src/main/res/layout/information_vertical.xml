<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".information"
    android:background="@drawable/infoverti"
    >

    <TextView
        android:id="@+id/textinfo"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="364dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="179dp"
        android:text=" Avec MindMap, mémorisez facilement tout ce que vous souhaitez de façon ludique Imprégnez vous des pièces de la maison et ajoutez dans chacun des objets des éléments à mémorisez ! "
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="235dp"
        android:layout_height="67dp"
        android:layout_marginStart="89dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="89dp"
        android:layout_marginBottom="99dp"
        android:text="Vous serez surpris par votre mémoire."
        android:textColor="#000000"
        android:textColorHint="#000000"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textinfo"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>

