<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_row="2"
    android:layout_column="3"
    app:columnCount="3"
    app:rowCount="2"
    >

    <ImageButton
        android:id="@+id/chambre"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="2"
        android:layout_column="1"
        android:contentDescription="@string/todo"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/chambre" />

    <ImageButton
        android:id="@+id/cuisine"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="3"
        android:layout_column="0"
        android:contentDescription="@string/menucuisine"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/logocuisine" />

    <ImageButton
        android:id="@+id/salledebain"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="2"
        android:layout_column="0"
        android:contentDescription="@string/menusalledebain"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/salledebain" />

    <ImageButton
        android:id="@+id/jeu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="3"
        android:layout_column="2"
        android:contentDescription="@string/menujeu"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/jeu" />

    <ImageButton
        android:id="@+id/salon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="2"
        android:layout_column="2"
        android:contentDescription="@string/menusalon"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/logosalon" />

    <ImageButton
        android:id="@+id/jardin"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_row="3"
        android:layout_column="1"
        android:contentDescription="@string/menujardin"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/logojardin" />
</GridLayout>