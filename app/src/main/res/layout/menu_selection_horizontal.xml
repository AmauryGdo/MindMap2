<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageButton
        android:id="@+id/chambre"
        android:layout_row="2"
        android:layout_column="2"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/chambre" />

    <ImageButton
        android:id="@+id/cuisine"
        android:layout_row="3"
        android:layout_column="0"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/logocuisine" />

    <ImageButton
        android:id="@+id/salledebain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="2"
        android:layout_column="0"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/salledebain" />

    <ImageButton
        android:id="@+id/jeu"
        android:layout_row="4"
        android:layout_column="0"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/jeu" />

    <ImageButton
        android:id="@+id/salon"
        android:layout_row="4"
        android:layout_column="2"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/logosalon" />

    <ImageButton
        android:id="@+id/jardin"
        android:layout_row="3"
        android:layout_column="2"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/logojardin" />
</GridLayout>