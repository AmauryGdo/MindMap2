<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_row="4"
    android:layout_column="4"
    app:columnCount="2"
    app:rowCount="6">

    <ImageButton
        android:id="@+id/chambre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/chambre" />

    <ImageButton
        android:id="@+id/jeu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/jeu" />

    <ImageButton
        android:id="@+id/cuisine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_column="0"
        app:layout_row="2"
        app:srcCompat="@drawable/logocuisine" />

    <ImageButton
        android:id="@+id/salon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_column="2"
        app:layout_row="4"
        app:srcCompat="@drawable/logosalon" />

    <ImageButton
        android:id="@+id/salledebain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_column="1"
        app:layout_row="1"
        app:srcCompat="@drawable/salledebain" />

    <ImageButton
        android:id="@+id/jardin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_column="1"
        app:layout_row="2"
        app:srcCompat="@drawable/logojardin" />
</android.support.v7.widget.GridLayout>
